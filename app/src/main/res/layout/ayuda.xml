<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262625"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/helptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30.0dp"
        android:text="@string/helptitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#cccccc" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="30.0dp"
        android:text="Observa lo que Tounos indica. Repite la secuencia de colores que indica Tounos."
        android:textSize="15sp"
        android:textColor="#cccccc" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="40.0dp"
        android:layout_marginRight="40.0dp"
        android:layout_marginTop="30.0dp"
        android:text="Tounos acumula pasos en cada nivel, no lo olvides."
        android:textSize="15sp"
        android:textColor="#cccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ok2"
            android:layout_width="90dip"
            android:layout_height="41dip"
            android:layout_marginLeft="50.0dp"
            android:layout_marginTop="70.0dp"
            android:background="@drawable/ok" />

        <Button
            android:id="@+id/tutorial"
            android:layout_width="90dip"
            android:layout_height="41dip"
            android:layout_marginLeft="50.0dp"
            android:layout_marginTop="70.0dp"
            android:background="@drawable/tutorial" />

    </LinearLayout>

</LinearLayout>